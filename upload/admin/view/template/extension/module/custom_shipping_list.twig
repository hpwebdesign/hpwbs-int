{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? ('#form-custom_shipping').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
           
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
     <div class="panel-body">
           <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-shipping-area" data-toggle="tab"><i class="fa fa-home"></i> {{ tab_free_shipping_list }}</a></li>
            <li><a href="#tab-setting" data-toggle="tab"><i class="fa fa-question-circle"></i> {{ tab_setting }}</a></li>
          </ul>
        <div class="tab-content">
           <div class="tab-pane active" id="tab-shipping-area">   
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-custom_shipping">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-left">{{ column_country }}</td>
                  <td class="text-left">{{ column_zone }}</td>
                  <td class="text-left">{{ column_city }}</td>
                  <td class="text-right">{{ column_total }}</td>
                   <td class="text-right">{{ column_etd }}</td>
                   <td class="text-right">{{ column_rate }}</td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
                {% if custom_shippings %}
                {% for custom_shipping in custom_shippings %}
                <tr>
                  <td class="text-center">{% if custom_shipping.custom_shipping_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ custom_shipping.custom_shipping_id }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ custom_shipping.custom_shipping_id }}" />
                    {% endif %}
                  <td class="text-left">{{ custom_shipping.country_name }}</td>
                  <td class="text-left">{{ custom_shipping.zone_name }}</td>
                  <td class="text-left">{{ custom_shipping.city_name }}</td>
                  <td class="text-right">{{ custom_shipping.total }}</td>
                  <td class="text-right">{{ custom_shipping.etd }}</td>
                  <td class="text-right">{{ custom_shipping.rate }}</td>
                  <td class="text-right"><a href="{{ custom_shipping.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                </tr>
                      {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="7">{{ text_no_results }}</td>
                </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
            </div>
            <div class="tab-pane" id="tab-setting">  
                <div class="pull-right">
                    <button type="submit" form="form-setting" data-toggle="tooltip" title="{{ button_save }}" onclick="('#form-setting').submit()" class="btn btn-primary"><i class="fa fa-save"></i> {{ button_save }}</button>  
                </div>
                
    <div class="clearfix"></div>
                
    <form action="{{ save }}" class="form-horizontal" method="post" enctype="multipart/form-data" id="form-setting">           
        <div class="form-group">
            <label class="control-label col-sm-2" for="input-shipping-name">{{ entry_shipping_name }}</label>
             <div class="col-sm-10">
            <input type="text" name="c_shipping_name" class="form-control" value="{{ c_shipping_name }}" />
            </div>
        </div>   
        
        <div class="form-group">
            <label class="control-label col-sm-2" for="input-shipping-description">{{ entry_shipping_description }}</label>
             <div class="col-sm-10">
            <input type="text" name="c_shipping_description" class="form-control" value="{{ c_shipping_description }}" />
            </div>
        </div>   
        
        <div class="form-group">
                <label class="col-sm-2 control-label" for="input-image">{{ entry_default_image }}</label>
                <div class="col-sm-10"><a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                  <input type="hidden" name="c_shipping_image" value="{{ c_shipping_image }}" id="input-image" />
                </div>
              </div>
                </form>    
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}