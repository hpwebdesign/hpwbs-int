    });
$("#r2").on('click',function () {


      $("#flat-rate").hide();
      $("#weight-range").hide();
$("#rate").show();

    });
$("#r3").on('click',function () {


       $("#flat-rate").hide();
      $("#weight-range").show();
$("#rate").hide();

    });
if ($.fn.checkboxpicker) {
			$('[data-control=checkbox]').checkboxpicker({onClass: 'btn-info'});
		}

		$('.btn-group .btn').addClass('btn-sm');
});
</script>

