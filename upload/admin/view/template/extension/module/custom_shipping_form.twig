<style>
.help {
    color: 
    #888;
    font-weight: normal;
    font-size: 11px;
    display: block;
    margin-top: 3px;
    margin-bottom: 10px;
    font-style: italic;
}
</style>
{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-custom_shipping" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs  %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-custom_shipping" class="form-horizontal">
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-province">{{ entry_country }}</label>
            <div class="col-sm-10">
            <input type="hidden" name="country_name" value="{{ country_name }}" />
              <select name="country_id" id="input-country" class="form-control">
                  <option>{{ text_select }}</option>
                  {% for country in countries %}
                {% if country.country_id == country_id %}
                <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
                {% else %}
                <option value="{{ country.country_id }}">{{ country.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
                {% if error_country_id %}
              <div class="text-danger">{{ error_country_id }}</div>
              {% endif %}
            </div>
          </div>            
        <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-city">{{ entry_zone }}</label>
            <div class="col-sm-10">
            <input type="hidden" name="zone_name" value="{{ zone_name }}"/>
              <select name="zone_id" id="input-zone" class="form-control">
              </select>
             {% if error_zone_id %}
              <div class="text-danger">{{ error_zone_id }}</div>
              {% endif %}
            </div>
          </div>
            
        <div class="form-group">
            
            <label class="control-label col-sm-2" for="input-city">{{ entry_city }}</label>
             <div class="col-sm-10">
              <input type="text" name="city_name" value="{{ city_name }}" class="form-control"/>
            </div>
        </div>       
        <div class="form-group required">
            <input type="hidden" name="total" value="{{ total }}" />
            <label class="control-label col-sm-2" for="input-total">
            {{ entry_total }}
            <span class="help">
            {{ help_total }}
            </span>
            </label>
             <div class="col-sm-10">
                <input name="total" value="{{ total }}" id="input-total" class="form-control" />
            </div>
        </div>
        <div class="form-group required">
            <input type="hidden" name="rate" value="{{ rate }}" />
            <label class="control-label col-sm-2" for="input-rate">{{ entry_rate }}
             <span class="help">
            {{ help_rate }}
            </span>
            </label>
             <div class="col-sm-10">
                <input name="rate" value="{{ rate }}" id="input-rate" class="form-control" />
                 {% if error_rate %}
                  <div class="text-danger">{{ error_rate }}</div>
                  {% endif %}
                    </div>
                  
            </div> 
        <div class="form-group required">
                  <label class="col-sm-2 control-label">{{ entry_rate_type }}</label>
                  <div class="col-sm-10">
                      {% if rate_type == "perkg" %}
                      <label class="radio-inline"><input type="radio" name="rate_type" value="flat"  id="r1" /> {{ text_flat_rate }} </label>
                     
                      <label class="radio-inline"><input type="radio" name="rate_type" value="perkg" id="r2" checked="checked" />
                      {{ text_per_kg }}</label>
                      {% else %}
                       <label class="radio-inline"><input type="radio" name="rate_type" value="flat" checked="checked" id="r1" /> {{ text_flat_rate }}</label>
                     
                       <label class="radio-inline"><input type="radio" name="rate_type" value="perkg" id="r2" />{{ text_per_kg }}</label>  
                      {% endif %}
                    
                  </div>
                </div>

                <div id="flat-rate">
         <div class="form-group">
            <input type="hidden" name="total_weight" value="{{ total_weight }}" />
            <label class="control-label col-sm-2" for="input-rate">{{ entry_total_weight }}
             <span class="help">
            {{ help_total_weight }}
            </span>
            </label>
             <div class="col-sm-10">
                <input type="number" name="total_weight" value="{{ total_weight }}" id="input-total-weight" class="form-control" />
            </div>
        </div>   
        <div class="form-group">
            <input type="hidden" name="for_every" value="{{ for_every }}" />
            <label class="control-label col-sm-2" for="input-rate">{{ entry_for_every }}
             <span class="help">
            {{ help_for_every }}
            </span>
            </label>
             <div class="col-sm-10">
                <input type="number" name="for_every" value="{{ for_every }}" id="input-for-every" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" name="cost" value="{{ cost }}" />
            <label class="control-label col-sm-2" for="input-cost">{{ entry_cost }}
             <span class="help">
            {{ help_cost }}
            </span>
            </label>
             <div class="col-sm-10">
                <input type="number" name="cost" value="{{ cost }}" id="input-cost" class="form-control" />
            </div>
        </div> 
        </div>   

        <div class="form-group required">
            <input type="hidden" name="etd" value="{{ etd }}" />
            <label class="control-label col-sm-2" for="input-rate">{{ entry_etd }}
             <span class="help">
            {{ help_etd }}
            </span>
            </label>
             <div class="col-sm-10">
                <input name="etd" value="{{ etd }}" id="input-etd" class="form-control" placeholder="2 - 3" />
                {% if error_etd %}
                  <div class="text-danger">{{ error_etd }}</div>
                  {% endif %}
            </div>
        </div>    
        
        <div class="form-group">
        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
            </div>
        </form>
      </div>
    </div>
  </div>
<script type="text/javascript">
{% if (rate_type == "perkg") %}
$("#flat-rate").hide();
{% else %}
  $("#flat-rate").show();
{% endif %}
    $("#r1").click(function () {
        $("#flat-rate").show();
    });
    $("#r2").click(function () {
        $("#flat-rate").hide();
    });

$('select[name=\'country_id\']').on('change', function() {
    $.ajax({
    url: 'index.php?route=localisation/country/country&user_token={{ user_token }}&country_id=' + this.value,
    dataType: 'json',
    beforeSend: function() {
      $('select[name=\'country_id\']').prop('disabled', true);
    },
    complete: function() {
      $('select[name=\'country_id\']').prop('disabled', false);

    },
    success: function(json) {
      html = '<option value="">{{ text_select }}</option>';

      if (json['zone'] && json['zone'] != '') {
        for (i = 0; i < json['zone'].length; i++) {
                html += '<option value="' + json['zone'][i]['zone_id'] + '"';

          if (json['zone'][i]['zone_id'] == '{{ zone_id }}') {
                  html += ' selected="selected"';
          }

                    html += '>' + json['zone'][i]['name'] + '</option>';
                    
        }
      } else {
        html += '<option value="0" selected="selected">{{ text_none }}</option>';
      }

$('select[name=\'zone_id\']').html(html);
      $('#button-save').prop('disabled', false);
    },
    error: function(xhr, ajaxOptions, thrownError) {
      alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
    }
  });
});
    

$('select[name=\'country_id\']').on('change', function() {
  var country_value = $('select[name=\'country_id\'] option:selected').text();
  $('input[name=\'country_name\']').val(country_value);
});
$('select[name=\'zone_id\']').on('change', function() {
  var zone_name = $('select[name=\'zone_id\'] option:selected').text();

  $('input[name=\'zone_name\']').val(zone_name);

});
    

$('select[name=\'country_id\']').trigger('change');
//-->
</script>
    
</div>
{{ footer }}